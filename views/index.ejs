    <!-- classes section -->
    <section class="w3l-classes py-5" id="classes">
        <div class="container py-lg-5 py-md-4 py-2">
            <h3 class="title-style text-center">Our Best Music <span>Classes</span></h3>
            <div class="row text-center justify-content-center">
                <div class="col-lg-4 col-md-6 mt-lg-5 mt-4">
                    <div class="grids-1 box-wrap p-lg-3">
                        <div class="icon">
                            
                            <!-- <i class="fas fa-guitar"></i> -->
                            <img src="/images/icons/icons8-guitar-96.png" alt="">
                        </div>
                        <h4><a href="#" class="title-head mt-4 mb-2">Guitar</a></h4>
                        <p class="text-para">Learn to play the guitar with expert instruction, catering to
                            all skill levels from beginners to advanced players. </p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 mt-lg-5 mt-4">
                    <div class="grids-1 box-wrap p-lg-3">
