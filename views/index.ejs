  <body>
    <!--Header-->
    <%- include('./ejs-partials/header') %>
    <!--Header-->
    <section class="hero_section py-5">
      <div class="container-fluid py-4">
        <div class="row align-items-center">
          <div class="col-xs-12 col-sm-12 col-md-6 col-lg-7">
            <section
              id="slider"
              class="carousel slide"
              data-bs-ride="carousel"
              data-bs-touch="true"
            >
              <div class="carousel-inner">
                <div class="carousel-item active">
                  <!-- <img
                    class="d-block w-100"
                    src="./assets/images/slider/slider-1.jpg"
                    alt=""
                  /> -->

                  <h1>SIDDA <br />Musical Academy</h1>
                  <!-- <a href="#" class="btn btn-style mt-5"> Watch Video &rarr;</a> -->
                </div>
                <div class="carousel-item">
                  <h1>Learn <br />Music Instruments</h1>
                  <!-- <a href="#" class="btn btn-style mt-5"> Watch Video &rarr;</a> -->
                </div>
                <div class="carousel-item">
                  <h1>Music for Every one</h1>
                  <!-- <a href="#" class="btn btn-style mt-5"> Watch Video &rarr;</a> -->
                </div>
              </div>
              <button
                class="carousel-control-prev"
                type="button"
                data-bs-target="#slider"
                data-bs-slide="prev"
              >
                <span class="carousel-control-prev-icon"></span>
              </button>
              <button
                class="carousel-control-next"
                type="button"
                data-bs-target="#slider"
                data-bs-slide="next"
              >
                <span class="carousel-control-next-icon"></span>
              </button>
            </section>
          </div>
          <!--end of the text slider col-->
          <div class="col-xs-12 col-sm-12 col-md-6 col-lg-4 text-center">
            <a href="#" onclick="lightbox_open();">
              <img
                src="/images/hero_section/music-border-2.png"
                class="img-fluid hero-image"
                style="height: 500px"
              />
            </a>
          </div>
          <a href="#" onclick="lightbox_open();"> </a>
        </div>
        <!-- <div class="border2">
          <img
            src="./assets/images/herosection/music-border-2.png"
            alt=""
            style="height: 200px"
          />
        </div> -->
      </div>
    </section>

    <section class="w3l-about py-5" id="about">
      <div class="container py-lg-5 py-md-4 py-2">
        <div class="row align-items-center">
          <div class="col-lg-6 section-width pe-xl-5 pt-lg-4">
            <h2 class="title-style">
              About <span>SIDDA Musical Acadamy</span>
            </h2>
            <p class="mt-4">
              At Sidda Musical Academy, we are passionate about nurturing
              musical talent and providing a platform for individuals to explore
              their creativity and express themselves through music. Founded
              with a vision to inspire and empower aspiring musicians, our
              academy offers comprehensive training in a variety of musical
              instruments including guitar, drum, electric pad, violin, and
              piano.
            </p>

            <a href="#" class="btn btn-style mt-5">
              Know more about us &rarr;</a
            >
          </div>
          <div class="col-lg-6 history-info mt-lg-0 mt-5 pt-md-4 pt-2">
            <div class="position-relative img-border">
              <img
                src="/images/hero_section/about.png"
                class="img-fluid radius-image"
                alt="video-popup"
              />
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="w4l-courses py-5">
      <div class="container">
        <div class="row">
          <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center py-3">
            <h2 class="display-6 fw-bold">Music Courses</h2>
          </div>
          <!--end of the frist col-->
          <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 my-2">
            <a href="#">
              <div class="shadow-lg p-3 w4l-course-card">
                <div class="d-flex align-items-center">
                  <div>
                    <img src="/images/icons/icons8-guitar-96.png" />
                  </div>
                  <div class="px-3 mt-2">
                    <h2 class="display-6 fs-5 text-dark">Guitar</h2>
                  </div>
                </div>
              </div>
            </a>
          </div>
          <!--end of the first col-->
          <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 my-2">
            <a href="#">
              <div class="shadow-lg p-3 w4l-course-card">
                <div class="d-flex align-items-center">
                  <div>
                    <img src="/images/icons/drum-set.png" width="92px" />
                  </div>
                  <div class="px-3 mt-2">
                    <h2 class="display-6 fs-5 text-dark">Drum</h2>
                  </div>
                </div>
              </div>
            </a>
          </div>
          <!--end of the second col-->
          <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 my-2">
            <a href="#">
              <div class="shadow-lg p-3 w4l-course-card">
                <div class="d-flex align-items-center">
                  <div>
                    <img src="/images/icons/electrical-pad.png" width="92px" />
                  </div>
                  <div class="px-3 mt-2">
                    <h2 class="display-6 fs-5 text-dark">Electrical Pads</h2>
                  </div>
                </div>
              </div>
            </a>
          </div>
          <!--end of the third col-->
          <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 my-2">
            <a href="#">
              <div class="shadow-lg p-3 w4l-course-card">
                <div class="d-flex align-items-center">
                  <div>
                    <img src="/images/icons/violin.png" width="92px" />
                  </div>
                  <div class="px-3 mt-2">
                    <h3 class="display-6 fs-5 text-dark">Violin</h3>
                  </div>
                </div>
              </div>
            </a>
          </div>
          <!--end of the fourth col-->
          <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 my-2">
            <a href="#">
              <div class="shadow-lg p-3 w4l-course-card">
                <div class="d-flex align-items-center">
                  <div>
                    <img src="/images/icons/piano.png" width="92px" />
                  </div>
                  <div class="px-3 mt-2">
                    <h2 class="display-6 fs-5 text-dark">Piano</h2>
                  </div>
                </div>
              </div>
            </a>
          </div>
          <!--end of the fidth col-->
          <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 my-2">
            <a href="#">
              <div class="shadow-lg p-3 w4l-course-card">
                <div class="d-flex align-items-center">
                  <div>
                    <img
                      src="/images/icons/vocal_staffnotation.png"
                      width="92px"
                      height="92px"
                    />
                  </div>
                  <div class="px-3 mt-2">
